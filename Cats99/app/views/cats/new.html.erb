<form action = "<%= cats_url %>" method="POST">
    <label>Name:
        <input type="text" name="cat[name]" value= <%= @cat.name %>>
    </label>
    <br>
    <br>
    <select name='cat[color]' >
        <option value='Select Color' disabled='true' selected='true'> Select Color </option>
        <% @cat.class.colors.each do |color| %>
            <option value='<%= color %>' selected='<%= @cat.color == color %>'><%= color %></option>
        
        <% end %>
    </select>

     <label >Sex:
        <label> Male:
        <input name='cat[sex]' type="radio" value="M" checked='<%= @cat.sex == 'M'%>'>>
        </label>
        <label> Female:
        <input name='cat[sex]' type="radio" value="F" checked='<%= @cat.sex == 'F'%>'>
        </label>
    </label>
    <br>
    <label>Birth Date:</label>

    <input type="date" name="cat[birth_date]"
        value="<%= @cat.birth_date || 2022-04-01 %>"
        min="1980-01-01" max="2022-12-31">
    <br>
    <label>Description:
        <input type='text' name='cat[description]'value>
    
    </label> 
    <br>

    <button>Add New Cat </button>

    </form>
    

<% if @errors %>
    <% @errors.each do |error| %>
    <p><%= error %></p>
    <% end %>
<% else %>

<% end %>

   