<form action = "<%= cats_url %>" method="POST">
    <label>Name:
        <input type="text" name="cat[name]" value= <%= @cat.name %>>
    </label>
    <br>
    <br>
    <select name='color' >
        <option value='Select Color' disabled='true' selected='true'> Select Color </option>
        <% @colors.each do |color| %>
            <option value='<%= color %>'><%= color %></option>
        <% end %>
    </select>

     <label for='sex'>Sex:
        <label> Female:
        <input name='sex' type="radio" >
        </label>
        <label> Male:
        <input name='sex' type="radio" >
        </label>
    </label>
    <br>
    <label for="start">Birth Date:</label>

    <input type="date" id="start" name="trip-start"
        value="2022-04-01"
        min="1980-01-01" max="2022-12-31">
    </form>

<% if @errors %>
    <% @errors.each do |error| %>
    <p><%= error %></p>
    <% end %>
<% else %>

<% end %>

   